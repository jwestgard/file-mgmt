#! /usr/bin/awk -f

#########################################################################
#        tally.awk      |    Joshua Westgard    |      2014-09-25       #
#-----------------------------------------------------------------------#
#    usage: awk -f tally.awk [filename]                                 #
#########################################################################

$4~/[0..9]/   {   gsub(/"/, "", $4); c+=1; t+=$4; print $4
              };
              
END           {   printf "\nTOTAL: %.2f GB for %s files.\n\n", t/2**30, c
              }
